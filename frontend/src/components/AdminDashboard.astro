---
import Layout from '../layouts/Layout.astro';

// Mock data for admin dashboard
const dashboardData = {
  overview: {
    totalRevenue: 125000.75,
    totalOrders: 1230,
    newCustomers: 150,
    conversionRate: 2.5,
    averageOrderValue: 101.63,
    totalProducts: 89,
    lowStockItems: 12,
    pendingReviews: 8
  },
  recentOrders: [
    {
      id: 'ORD-001',
      customer: 'Max Mustermann',
      amount: 89.90,
      status: 'processing',
      date: '2024-03-10T14:30:00Z'
    },
    {
      id: 'ORD-002',
      customer: 'Anna Schmidt',
      amount: 124.50,
      status: 'shipped',
      date: '2024-03-10T12:15:00Z'
    },
    {
      id: 'ORD-003',
      customer: 'Peter Weber',
      amount: 67.20,
      status: 'delivered',
      date: '2024-03-10T09:45:00Z'
    }
  ],
  topProducts: [
    { name: 'Tibet Armband', sales: 45, revenue: 1120.50 },
    { name: 'Boho Kette', sales: 32, revenue: 1276.80 },
    { name: 'Mondstein Ohrringe', sales: 28, revenue: 1397.20 }
  ],
  lowStockAlerts: [
    { product: 'Tibet Armband', stock: 3, minLevel: 10 },
    { product: 'Boho Kette', stock: 5, minLevel: 8 },
    { product: 'Feder Fußkettchen', stock: 2, minLevel: 5 }
  ],
  pendingReviews: [
    { product: 'Tibet Armband', customer: 'Lisa Müller', rating: 5, date: '2024-03-09' },
    { product: 'Boho Kette', customer: 'Tom Schmidt', rating: 4, date: '2024-03-08' }
  ]
};

const formatCurrency = (amount: number) => `€${amount.toFixed(2)}`;
const formatDate = (dateString: string) => new Date(dateString).toLocaleDateString('de-DE');
---

<Layout title="Admin Dashboard - Casa Petrada">
  <div class="min-h-screen bg-boho-beige">
    <!-- Header -->
    <div class="bg-boho-dark text-boho-text-light py-4">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center">
          <h1 class="text-2xl font-serif font-bold">Admin Dashboard</h1>
          <div class="flex items-center space-x-4">
            <span class="text-boho-text-muted">Willkommen zurück, Admin</span>
            <button class="bg-boho-pink hover:bg-boho-brown text-white px-4 py-2 rounded-lg transition-colors duration-300">
              Abmelden
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Overview Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-md p-6 border border-boho-accent">
          <div class="flex items-center">
            <div class="p-3 bg-green-100 rounded-full">
              <i class="fas fa-euro-sign text-green-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-boho-text-muted">Gesamtumsatz</p>
              <p class="text-2xl font-bold text-boho-dark">{formatCurrency(dashboardData.overview.totalRevenue)}</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6 border border-boho-accent">
          <div class="flex items-center">
            <div class="p-3 bg-blue-100 rounded-full">
              <i class="fas fa-shopping-cart text-blue-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-boho-text-muted">Bestellungen</p>
              <p class="text-2xl font-bold text-boho-dark">{dashboardData.overview.totalOrders}</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6 border border-boho-accent">
          <div class="flex items-center">
            <div class="p-3 bg-purple-100 rounded-full">
              <i class="fas fa-users text-purple-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-boho-text-muted">Neue Kunden</p>
              <p class="text-2xl font-bold text-boho-dark">{dashboardData.overview.newCustomers}</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6 border border-boho-accent">
          <div class="flex items-center">
            <div class="p-3 bg-orange-100 rounded-full">
              <i class="fas fa-chart-line text-orange-600 text-xl"></i>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-boho-text-muted">Konversionsrate</p>
              <p class="text-2xl font-bold text-boho-dark">{dashboardData.overview.conversionRate}%</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Additional Stats -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-md p-6 border border-boho-accent">
          <div class="text-center">
            <p class="text-sm font-medium text-boho-text-muted">Durchschnittlicher Bestellwert</p>
            <p class="text-xl font-bold text-boho-dark">{formatCurrency(dashboardData.overview.averageOrderValue)}</p>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6 border border-boho-accent">
          <div class="text-center">
            <p class="text-sm font-medium text-boho-text-muted">Produkte</p>
            <p class="text-xl font-bold text-boho-dark">{dashboardData.overview.totalProducts}</p>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6 border border-boho-accent">
          <div class="text-center">
            <p class="text-sm font-medium text-boho-text-muted">Geringer Lagerbestand</p>
            <p class="text-xl font-bold text-red-600">{dashboardData.overview.lowStockItems}</p>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6 border border-boho-accent">
          <div class="text-center">
            <p class="text-sm font-medium text-boho-text-muted">Ausstehende Bewertungen</p>
            <p class="text-xl font-bold text-yellow-600">{dashboardData.overview.pendingReviews}</p>
          </div>
        </div>
      </div>

      <!-- Main Content Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Recent Orders -->
        <div class="bg-white rounded-lg shadow-md border border-boho-accent">
          <div class="px-6 py-4 border-b border-boho-accent">
            <h3 class="text-lg font-semibold text-boho-dark">Neueste Bestellungen</h3>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              {dashboardData.recentOrders.map((order) => (
                <div class="flex items-center justify-between py-3 border-b border-boho-accent last:border-b-0">
                  <div>
                    <p class="font-medium text-boho-dark">{order.id}</p>
                    <p class="text-sm text-boho-text-muted">{order.customer}</p>
                  </div>
                  <div class="text-right">
                    <p class="font-semibold text-boho-dark">{formatCurrency(order.amount)}</p>
                    <span class={`inline-flex px-2 py-1 text-xs font-semibold rounded-full ${
                      order.status === 'processing' ? 'bg-yellow-100 text-yellow-800' :
                      order.status === 'shipped' ? 'bg-blue-100 text-blue-800' :
                      order.status === 'delivered' ? 'bg-green-100 text-green-800' :
                      'bg-gray-100 text-gray-800'
                    }`}>
                      {order.status === 'processing' ? 'In Bearbeitung' :
                       order.status === 'shipped' ? 'Versandt' :
                       order.status === 'delivered' ? 'Geliefert' : order.status}
                    </span>
                  </div>
                </div>
              ))}
            </div>
            <div class="mt-4">
              <a href="/admin/orders" class="text-boho-pink hover:text-boho-brown font-medium">
                Alle Bestellungen anzeigen →
              </a>
            </div>
          </div>
        </div>

        <!-- Top Products -->
        <div class="bg-white rounded-lg shadow-md border border-boho-accent">
          <div class="px-6 py-4 border-b border-boho-accent">
            <h3 class="text-lg font-semibold text-boho-dark">Top Produkte</h3>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              {dashboardData.topProducts.map((product, index) => (
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <span class="w-6 h-6 bg-boho-pink text-white rounded-full flex items-center justify-center text-sm font-bold mr-3">
                      {index + 1}
                    </span>
                    <div>
                      <p class="font-medium text-boho-dark">{product.name}</p>
                      <p class="text-sm text-boho-text-muted">{product.sales} Verkäufe</p>
                    </div>
                  </div>
                  <p class="font-semibold text-boho-dark">{formatCurrency(product.revenue)}</p>
                </div>
              ))}
            </div>
            <div class="mt-4">
              <a href="/admin/products" class="text-boho-pink hover:text-boho-brown font-medium">
                Alle Produkte anzeigen →
              </a>
            </div>
          </div>
        </div>

        <!-- Low Stock Alerts -->
        <div class="bg-white rounded-lg shadow-md border border-boho-accent">
          <div class="px-6 py-4 border-b border-boho-accent">
            <h3 class="text-lg font-semibold text-boho-dark">Lagerbestand Warnungen</h3>
          </div>
          <div class="p-6">
            <div class="space-y-3">
              {dashboardData.lowStockAlerts.map((alert) => (
                <div class="flex items-center justify-between p-3 bg-red-50 rounded-lg">
                  <div>
                    <p class="font-medium text-boho-dark">{alert.product}</p>
                    <p class="text-sm text-red-600">Nur noch {alert.stock} auf Lager</p>
                  </div>
                  <span class="text-red-600 font-bold">{alert.stock}/{alert.minLevel}</span>
                </div>
              ))}
            </div>
            <div class="mt-4">
              <a href="/admin/inventory" class="text-boho-pink hover:text-boho-brown font-medium">
                Lagerbestand verwalten →
              </a>
            </div>
          </div>
        </div>

        <!-- Pending Reviews -->
        <div class="bg-white rounded-lg shadow-md border border-boho-accent">
          <div class="px-6 py-4 border-b border-boho-accent">
            <h3 class="text-lg font-semibold text-boho-dark">Ausstehende Bewertungen</h3>
          </div>
          <div class="p-6">
            <div class="space-y-3">
              {dashboardData.pendingReviews.map((review) => (
                <div class="flex items-center justify-between p-3 bg-yellow-50 rounded-lg">
                  <div>
                    <p class="font-medium text-boho-dark">{review.product}</p>
                    <p class="text-sm text-boho-text-muted">{review.customer} • {review.date}</p>
                  </div>
                  <div class="flex items-center">
                    <div class="flex text-yellow-400 mr-2">
                      {[...Array(5)].map((_, i) => (
                        <i class={`fas fa-star ${i < review.rating ? 'text-yellow-400' : 'text-gray-300'}`}></i>
                      ))}
                    </div>
                    <span class="text-yellow-600 font-bold">{review.rating}/5</span>
                  </div>
                </div>
              ))}
            </div>
            <div class="mt-4">
              <a href="/admin/reviews" class="text-boho-pink hover:text-boho-brown font-medium">
                Alle Bewertungen anzeigen →
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="mt-8 bg-white rounded-lg shadow-md border border-boho-accent">
        <div class="px-6 py-4 border-b border-boho-accent">
          <h3 class="text-lg font-semibold text-boho-dark">Schnellzugriff</h3>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <a href="/admin/products/new" class="flex items-center p-4 bg-boho-pink text-white rounded-lg hover:bg-boho-brown transition-colors duration-300">
              <i class="fas fa-plus text-xl mr-3"></i>
              <span>Neues Produkt</span>
            </a>
            <a href="/admin/orders" class="flex items-center p-4 bg-boho-brown text-white rounded-lg hover:bg-boho-pink transition-colors duration-300">
              <i class="fas fa-shopping-cart text-xl mr-3"></i>
              <span>Bestellungen</span>
            </a>
            <a href="/admin/users" class="flex items-center p-4 bg-boho-dark text-white rounded-lg hover:bg-gray-700 transition-colors duration-300">
              <i class="fas fa-users text-xl mr-3"></i>
              <span>Benutzer</span>
            </a>
            <a href="/admin/analytics" class="flex items-center p-4 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors duration-300">
              <i class="fas fa-chart-bar text-xl mr-3"></i>
              <span>Analysen</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Auto-refresh dashboard data every 5 minutes
  setInterval(() => {
    // In a real app, this would fetch fresh data from the API
    console.log('Refreshing dashboard data...');
  }, 300000);

  // Real-time notifications
  if ('Notification' in window && Notification.permission === 'granted') {
    // Show notifications for new orders, low stock, etc.
    console.log('Notifications enabled');
  }
</script>
