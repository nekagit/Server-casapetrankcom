---
import Layout from '../layouts/Layout.astro';

// Mock product data - in real app this would come from API
const products = [
  {
    id: 1,
    name: "Korsika Kette",
    price: 34.90,
    image: "/images/products/korsika-kette.jpg",
    category: "Kurze Ketten",
    description: "Elegante kurze Kette mit natürlichen Elementen"
  },
  {
    id: 2,
    name: "Lourdes Kette",
    price: 29.90,
    image: "/images/products/lourdes-kette.jpg",
    category: "Wechselketten",
    description: "Stylische Wechselkette mit Anhänger"
  },
  {
    id: 3,
    name: "Maria Kette",
    price: 39.90,
    image: "/images/products/maria-kette.jpg",
    category: "Anhänger",
    description: "Besondere Kette mit handgefertigtem Anhänger"
  },
  {
    id: 4,
    name: "Flügel Anhänger",
    price: 24.90,
    image: "/images/products/fluegel-anhaenger.jpg",
    category: "Anhänger",
    description: "Zarter Anhänger mit Flügel-Motiv"
  }
];
---

<Layout 
  title="Ketten - Casa Petrada"
  description="Entdecke unsere handgefertigten Ketten. Kurze Ketten, Wechselketten und Anhänger im Boho-Stil."
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-boho-beige to-boho-accent py-20 lg:py-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-boho-dark mb-6">
          Ketten
        </h1>
        <p class="text-lg md:text-xl text-boho-dark/80 max-w-3xl mx-auto">
          Handgefertigte Ketten im Boho-Stil - Kurze Ketten, Wechselketten und Anhänger
        </p>
      </div>
    </div>
  </section>

  <!-- Filter Section -->
  <section class="py-8 bg-white border-b border-boho-accent">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap gap-4 justify-center">
        <button class="px-6 py-2 bg-boho-pink text-white rounded-lg font-medium">
          Alle Ketten
        </button>
        <button class="px-6 py-2 bg-boho-accent text-boho-dark rounded-lg font-medium hover:bg-boho-pink hover:text-white transition-colors">
          Kurze Ketten
        </button>
        <button class="px-6 py-2 bg-boho-accent text-boho-dark rounded-lg font-medium hover:bg-boho-pink hover:text-white transition-colors">
          Wechselketten
        </button>
        <button class="px-6 py-2 bg-boho-accent text-boho-dark rounded-lg font-medium hover:bg-boho-pink hover:text-white transition-colors">
          Anhänger
        </button>
      </div>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {products.map((product) => (
          <div class="card group">
            <div class="relative overflow-hidden">
              <img 
                src={product.image} 
                alt={product.name}
                class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
              />
              <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-300 flex items-center justify-center">
                <button class="opacity-0 group-hover:opacity-100 bg-white text-boho-pink px-6 py-3 rounded-lg font-semibold transition-all duration-300 hover:bg-boho-pink hover:text-white">
                  <i class="fas fa-eye mr-2"></i>
                  Schnellansicht
                </button>
              </div>
            </div>
            <div class="p-6">
              <div class="mb-2">
                <span class="text-sm text-boho-pink font-medium">{product.category}</span>
              </div>
              <h3 class="text-xl font-semibold text-boho-dark mb-2">{product.name}</h3>
              <p class="text-boho-dark/70 text-sm mb-4">{product.description}</p>
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <span class="text-2xl font-bold text-boho-dark">{product.price.toFixed(2)} €</span>
                </div>
                <button class="bg-boho-pink text-white px-4 py-2 rounded-lg font-medium hover:bg-boho-brown transition-colors duration-300">
                  <i class="fas fa-shopping-bag mr-1"></i>
                  In den Warenkorb
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Load More Button -->
      <div class="text-center mt-12">
        <button class="btn-secondary">
          <i class="fas fa-plus mr-2"></i>
          Mehr Ketten laden
        </button>
      </div>
    </div>
  </section>

  <!-- Category Info -->
  <section class="py-20 bg-boho-light">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-serif font-bold text-boho-dark mb-6">
        Handgefertigte Ketten
      </h2>
      <p class="text-lg text-boho-dark/70 mb-8">
        Unsere Ketten werden mit Liebe und Sorgfalt von Hand gefertigt. 
        Jedes Stück ist ein Unikat und wird aus hochwertigen, natürlichen Materialien hergestellt.
      </p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-left">
        <div>
          <h3 class="text-xl font-semibold text-boho-dark mb-3">Kurze Ketten</h3>
          <p class="text-boho-dark/70">
            Perfekt für den täglichen Gebrauch. Kurze Ketten sitzen elegant am Hals und 
            sind ideal für alle Anlässe.
          </p>
        </div>
        <div>
          <h3 class="text-xl font-semibold text-boho-dark mb-3">Wechselketten</h3>
          <p class="text-boho-dark/70">
            Flexible Ketten mit austauschbaren Anhängern. Perfekt für verschiedene Stimmungen 
            und Anlässe.
          </p>
        </div>
        <div>
          <h3 class="text-xl font-semibold text-boho-dark mb-3">Anhänger</h3>
          <p class="text-boho-dark/70">
            Einzigartige handgefertigte Anhänger mit besonderen Motiven und Symbolen. 
            Jeder Anhänger erzählt eine Geschichte.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>
